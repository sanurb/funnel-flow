{
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.fixAll.eslint": "explicit",
			"source.organizeImports.biome": "explicit"
		}
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.fixAll.eslint": "explicit",
			"source.organizeImports.biome": "explicit"
		}
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.fixAll.eslint": "explicit",
			"source.organizeImports.biome": "explicit"
		}
	}
}
